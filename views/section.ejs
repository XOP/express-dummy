<!DOCTYPE html>
<html>
<head>
    <% include partials/head.ejs %>
</head>
<body>

<% include partials/header.ejs %>

<main>
    <div class="container">

        <div class="columns <%= columns.one %>">
            <section>
                <h2>
                    <%= company %>
                </h2>
                <section>
                    <p>
                        <cite><%= address %></cite>
                    </p>
                    <p>
                        <%= about %>
                    </p>
                </section>
            </section>
        </div>

        <div class="columns <%= columns.two %>">
            <menu>
                <% data.forEach(function(item, i, array){ %>
                <li>
                    <a href="/section/<%= i %>" title="<%= item.company %>"><%= item.company %></a>
                </li>
                <% }); %>
            </menu>
        </div>

    </div>
</main>

<% include partials/footer.ejs %>
<div class="notification"><div class="message"></div></div>

<% include partials/scriptsBottom.ejs %>
</body>
</html>
